<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NoteClass">
    <TextView
        android:id="@+id/noteHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is yout note"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/NoteTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:hint="Title"
        app:layout_constraintTop_toBottomOf="@id/noteHeader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30sp"
        />
    <EditText
        android:id="@+id/NoteTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Description"
        app:layout_constraintTop_toBottomOf="@id/NoteTextTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30sp"
        />
    <Button
        android:id="@+id/CancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="#EC407A"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@id/NoteTextDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#285EBA"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@id/NoteTextDescription"
        app:layout_constraintRight_toRightOf ="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>